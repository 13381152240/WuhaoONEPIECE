<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="wuhao.bwei.com.wuhaoonepiece.view.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/table" />


    </LinearLayout>
    <com.hjm.bottomtabbar.BottomTabBar
        android:id="@+id/bottom_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        </com.hjm.bottomtabbar.BottomTabBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="left"
        android:choiceMode="singleChoice"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/raw_1499945498"
            android:layout_height="200dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cl_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="46dp"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp"
                app:roundAsCircle="true"
                fresco:placeholderImage="@mipmap/b" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/cl_imageView"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:textColor="#ffffff"
                android:layout_toEndOf="@+id/cl_imageView"
                android:layout_toRightOf="@+id/cl_imageView"
                android:text="love" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="77dp"
                android:layout_marginRight="77dp"
                android:src="@drawable/raw_1499948747" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:textColor="#ffffff"
                android:text="编辑个性签名" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rightt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/myguanid"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:id="@+id/iv_guan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/raw_1499933216"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_guan"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/raw_1499943790"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/iv_guan2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/raw_1499947358"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_guan2"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/raw_1499943790"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/iv_guan3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/raw_1499946865"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索好友"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_guan3"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/raw_1499943790"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/iv_guan4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/raw_1499947389"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息通知"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_guan4"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/raw_1499943790"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
