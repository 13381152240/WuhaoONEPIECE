<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/raw_1500866926"
    >
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#119eda"
        android:orientation="horizontal"

        >

    <TextView
        android:id="@+id/fini"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="取消"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_marginRight="180dp"
        android:text="推荐"
        android:textSize="20dp" />


</LinearLayout>

    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/video"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="39dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@mipmap/raw_1500971112"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textSize="30dp"
            android:layout_below="@+id/video"
            android:layout_alignLeft="@+id/video"
            android:layout_marginLeft="10dp"
            android:layout_alignStart="@+id/video"
            android:id="@+id/textView" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cross"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@mipmap/raw_1500971213"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/video"
            android:layout_alignStart="@+id/video" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="段子"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/cross"
            android:layout_alignLeft="@+id/cross"
            android:layout_alignStart="@+id/cross" />

    </RelativeLayout>


</LinearLayout>
