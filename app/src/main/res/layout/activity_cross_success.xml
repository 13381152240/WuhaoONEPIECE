<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="wuhao.bwei.com.wuhaoonepiece.view.CrossSuccessActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#05a9f4"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            app:srcCompat="@drawable/raw_1500021052" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_toRightOf="@+id/imageView7"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="19sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            app:srcCompat="@drawable/raw_1500021052" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="发表成功,快分享给好友吧!!!"
            android:textColor="#020202" />

        <ImageView
            android:id="@+id/fengxiang_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView10"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="37dp"
            android:layout_toLeftOf="@+id/textView10"
            android:layout_toStartOf="@+id/textView10"
            app:srcCompat="@drawable/raw_1500022714" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fengxiang_qq"
            android:layout_alignStart="@+id/fengxiang_qq"
            android:layout_below="@+id/fengxiang_qq"
            android:text="QQ好友"
            android:textColor="#020202"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/fengxiang_kongjian"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/textView11"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/fengxiang_qq"
            android:layout_toRightOf="@+id/fengxiang_qq"
            app:srcCompat="@drawable/raw_1500022686" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fengxiang_kongjian"
            android:layout_alignStart="@+id/fengxiang_kongjian"
            android:layout_below="@+id/fengxiang_kongjian"
            android:text="QQ空间"
            android:textColor="#020202"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/fengxiang_pengyou"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/textView12"
            android:layout_alignEnd="@+id/textView10"
            android:layout_alignRight="@+id/textView10"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            app:srcCompat="@drawable/raw_1500022317" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fengxiang_pengyou"
            android:layout_alignStart="@+id/fengxiang_pengyou"
            android:layout_below="@+id/fengxiang_pengyou"
            android:text="朋友圈"
            android:textColor="#020202"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/fengxiang_weixin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/fengxiang_pengyou"
            android:layout_toEndOf="@+id/fengxiang_pengyou"
            android:layout_toRightOf="@+id/fengxiang_pengyou"
            app:srcCompat="@drawable/raw_1500022698" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fengxiang_weixin"
            android:layout_toEndOf="@+id/fengxiang_pengyou"
            android:layout_toRightOf="@+id/fengxiang_pengyou"
            android:text="微信"
            android:textColor="#020202"
            android:textSize="15sp" />

        <Button
            android:id="@+id/t_qianqu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:background="@drawable/shape_b"
            android:text="前去看看!" />
    </RelativeLayout>
</LinearLayout>
