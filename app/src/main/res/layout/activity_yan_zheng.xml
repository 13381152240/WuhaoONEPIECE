<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/raw_1500974387"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="29dp"
        app:srcCompat="@mipmap/logo"
        android:layout_below="@+id/fanid"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/fanid"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        app:srcCompat="@drawable/raw_1500363027"
        android:layout_alignTop="@+id/yiyou"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="86+  | "
        android:textColor="#fff"
        android:textSize="16dp"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/numberid"
        android:layout_alignBottom="@+id/numberid"
        android:layout_toRightOf="@+id/fanid"
        android:layout_toEndOf="@+id/fanid"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />
    <TextView
        android:id="@+id/yiyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#fff"

        android:text="已有账号?"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />


        <EditText
            android:id="@+id/numberid"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:labelFor="@+id/editPhone"
            android:textColorHint="#fff"
            android:hint="请输入手机号码"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textSize="15sp"
        android:textColor="#fff"
        android:id="@+id/getyanzheng"
        android:layout_alignBaseline="@+id/numberid"
        android:layout_alignBottom="@+id/numberid"
        android:layout_alignRight="@+id/numberid"
        android:layout_alignEnd="@+id/numberid" />
    
    
    <EditText
        android:id="@+id/yanzhengid"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:hint="请输入验证码"
        android:textColorHint="#fff"
        android:layout_below="@+id/numberid"
        android:layout_alignLeft="@+id/fanid"
        android:layout_alignStart="@+id/fanid" />
    
    <Button
        android:id="@+id/nextid"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="下一步"
        android:background="@drawable/shape_b1"
        android:layout_below="@+id/yanzhengid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/youkeid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nextid"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="#b5b3b5"
        android:text="游客登陆" />


</RelativeLayout>
